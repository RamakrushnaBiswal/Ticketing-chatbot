<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cahtbot</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-amber-200">
    <h1 class="text-9xl text-center font-bold ">
        The Booking Chatbot :) <br>
    </h1>
    <!-- Trigger Button -->
    <div class="flex justify-center mt-10">
        <button
            class="bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-500"
            onclick="openModal()">
            Book Ticket
        </button>
    </div>

    <!-- Modal Background (Initially Hidden) -->
    <div id="ticketModal" class="fixed inset-0 flex items-center justify-center bg-black bg-opacity-50 z-50 hidden"
        onclick="closeModal(event)">
        <!-- Modal Container -->
        <div class="bg-white w-full max-w-lg p-6 rounded-lg shadow-lg relative" onclick="event.stopPropagation()">
            <!-- Modal Header -->
            <div class="flex justify-between items-center mb-4">
                <h2 class="text-xl font-semibold">Book Your Ticket</h2>
                <button class="text-gray-600 hover:text-gray-900" onclick="closeModal()">
                    <svg class="h-6 w-6 fill-current" viewBox="0 0 24 24">
                        <path d="M6 18L18 6M6 6l12 12" />
                    </svg>
                </button>
            </div>

            <!-- Modal Content -->
            <form action="/submit" method="post">
                <!-- Event Name -->
                <div class="mb-4">
                    <label class="block text-gray-700 text-sm font-bold mb-2" for="eventName">
                        Event Name
                    </label>
                    <input class="w-full px-3 py-2 border rounded focus:outline-none focus:ring-2 focus:ring-blue-500"
                        type="text" id="eventName" name="name" placeholder="Enter event name" required>
                </div>

                <!-- Date Selection -->
                <div class="mb-4">
                    <label class="block text-gray-700 text-sm font-bold mb-2" for="date">
                        Date
                    </label>
                    <input class="w-full px-3 py-2 border rounded focus:outline-none focus:ring-2 focus:ring-blue-500"
                        type="date" id="date" required name="date">
                </div>

                <!-- Time Selection -->
                <div class="mb-4">
                    <label class="block text-gray-700 text-sm font-bold mb-2" for="time">
                        Time
                    </label>
                    <select class="w-full px-3 py-2 border rounded focus:outline-none focus:ring-2 focus:ring-blue-500"
                        id="time" name="time">
                        <option value="6pm">6:00 PM</option>
                        <option value="8pm">8:00 PM</option>
                        <option value="10pm">10:00 PM</option>
                    </select>
                </div>

                <!-- Number of Tickets -->
                <div class="mb-4">
                    <label class="block text-gray-700 text-sm font-bold mb-2" for="tickets">
                        Number of Tickets
                    </label>
                    <input class="w-full px-3 py-2 border rounded focus:outline-none focus:ring-2 focus:ring-blue-500"
                        type="number" id="tickets" placeholder="Enter number of tickets" min="1" max="10" required name="ticket">
                </div>

                <!-- Submit Button -->
                <div class="flex justify-end">
                    <button
                        class="bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-500">
                        Confirm Booking
                    </button>
                </div>
            </form>
        </div>
    </div>

    <script>
        // Function to open the modal
        function openModal() {
            document.getElementById('ticketModal').classList.remove('hidden');
        }

        // Function to close the modal
        function closeModal(event) {
            // Check if the click is outside the modal content
            if (!event || event.target.id === 'ticketModal') {
                document.getElementById('ticketModal').classList.add('hidden');
            }
        }
    </script>

</body>

</html>